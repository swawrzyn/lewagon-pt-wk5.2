.title-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    margin: 50rpx 0;
}

.title-box .name {
    font-size: 56rpx;
    font-weight: bold;
}

.reviews {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
}

.reviews .title {
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 40rpx;
}

.review-items {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
    width: 95%;
    padding: 0 20rpx;
}

.review-items .content {
    width: 100%;
    padding: 25rpx;
}